{
    "manifest_version": 2,
    "name": "dcl-forum-votes-overlay",
    "version": "0.0.1",
    "description": "Overlay the current vote status of matching governance.decentraland.org topics on forum.decentraland.org",
    "icons": {
        "16": "16x16.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },
    "page_action":{},
    "externally_connectable": {
        "matches": ["*://forum.decentraland.org/*"]
      },
    "content_scripts": [
        {
            "matches": ["*://forum.decentraland.org/*"],
            "js": ["in-content.js"],
            "css": ["styles.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_security_policy":
        "script-src 'self' 'unsafe-eval'; object-src 'self'; img-src * data: 'self' 'unsafe-eval'",
    "offline_enabled": true,
    "permissions": ["tabs", "*://forum.decentraland.org/*", "activeTab"]
}
